generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Proverb {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  text         String   @unique
  meaning      String
  category     String?
  region       String?
  keywords     String?  // JSON array stringified
  imagePrompt  String?
  imageUrl     String?
  audioUrl     String?
  popularity   Int      @default(0)
  source       String?
  validated    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       String?  // For user-submitted proverbs

  @@index([category])
  @@index([validated])
}

model QuizAttempt {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  score     Int
  timestamp DateTime @default(now())
}
