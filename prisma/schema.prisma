// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Proverb {
  id         String   @id @default(cuid())
  text       String   @unique
  meaning    String?
  imageUrl   String?
  category   String?
  region     String?
  popularity Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([popularity])
  @@index([category])
  @@map("proverbs")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  favorites String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
